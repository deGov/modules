{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{%
set media_classes = [
    'some-embed',
    'clearfix',
]
%}
<article{{ attributes.addClass(media_classes) }}>
  {% if social_media_disabled %}
  <div class="some-embed__code js-social-media-code"{{ content.field_some_embed_code|quickedit_attr }}>{{ 'Disabled'|trans }}</div>
  {% else %}
  <div class="some-embed__code"{{ content.field_some_embed_code|quickedit_attr }}>{{ content.field_some_embed_code|field_value }}</div>
  {% endif %}
  {% if content.usage %}
  <div class="some-embed__usage">
    <h2>{{ 'Usage'|trans }}</h2>
    {{  content.usage }}
  </div>
  {% endif %}
</article>
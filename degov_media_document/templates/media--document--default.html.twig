{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{%
set media_classes = [
  'document',
  'clearfix',
]
%}

<li>
  <article{{ attributes.addClass(media_classes) }}>
    {{ content.contextual_links }}
    <div class="document__title"><a aria-label="{{ media_aria_label }}" type="{{ media_mime }}; length={{ media_bytes }}" href="{{ media_url }}">{{ content.field_title|field_value }}</a></div>
    <div aria-hidden="true" class="document__meta">
      <span class="mime-{{ media_mime|clean_class }}"></span>{{ media_extention|upper }}, {{ media_size }}
    </div>
    {% if content.field_tags|field_value %}
      <div class="tags"{{ content.field_tags|quickedit_attr }}>{{ content.field_tags }}</div>
    {% endif %}
  </article>
</li>
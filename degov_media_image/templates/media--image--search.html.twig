{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
 #}
{% set media_classes = [
  'image',
  'media--search',
  'clearfix',
] %}
<article{{ attributes.addClass(media_classes) }}>
  <div class="media--search__type-text">{{ 'Bild'|t }}</div>
  <div class="image__image">{{ content.image|field_value }}</div>
  <div class="media--search__info">
      {% if content.field_image_date|field_value %}
        <span class="media--search__date image__date">{{ content.field_image_date|field_value }}</span>
      {% endif %}
        <span class="media--search__caption">{{ content.field_title|field_value }}</span>
  </div>
  {% if content.field_tags|field_value %}
    <div class="media--search__tags tags">{{ content.field_tags|field_value }}</div>
  {% endif %}
</article>
